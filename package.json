{
  "name": "cdk-workshop",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "concurrently npm:install:api-deps-layer npm:install:sharp-layer --kill-others-on-fail",
    "install:api-deps-layer": "cd layers/api-deps/nodejs && npm install --omit=dev && cd -",
    "install:sharp-layer": "cd layers/sharp/nodejs && npm install --omit=dev && cd -",
    "dev": "concurrently -c gray,yellow,green npm:api:watch npm:api:serve npm:web:serve --kill-others-on-fail",
    "cdk:dev": "npm run web:build && cdk deploy --watch",
    "cdk:deploy": "npm run web:build && cdk deploy",
    "dynamo:launch:example": "docker run -p 8000:8000 -v $(pwd)/.local/dynamo:/data/ amazon/dynamodb-local -jar DynamoDBLocal.jar -sharedDb -dbPath /data",
    "build": "npm run api:build && npm run web:build",
    "preapi:build": "trash dist/api",
    "api:build": "ts-node scripts/esbuild.ts",
    "api:watch": "npm run api:build -- watch",
    "api:serve": "sls dynamodb install && sls offline start",
    "preweb:build": "trash dist/web",
    "web:build": "ng build --aot --configuration production",
    "web:watch": "npm run web:build -- --watch",
    "web:serve": "ng serve"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.12",
    "@angular/cli": "^12.2.12",
    "@angular/compiler-cli": "^12.2.12",
    "@angular/language-service": "^12.2.12",
    "@types/app-root-path": "^1.2.4",
    "@types/aws-lambda": "^8.10.102",
    "@types/node": "^12.11.1",
    "@types/read-json-sync": "^2.0.0",
    "@types/serverless": "^3.12.7",
    "@types/sharp": "^0.23.1",
    "@types/uuid": "^3.4.5",
    "@types/wait-on": "^5.3.1",
    "aws-cdk": "^2.78.0",
    "concurrently": "^5.0.0",
    "esbuild": "^0.15.7",
    "parcel-plugin-externals": "^0.5.2",
    "read-json-sync": "^2.0.1",
    "serverless": "^3.20.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^8.8.0",
    "serverless-s3-local": "^0.6.20",
    "sharp": "^0.30.7",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.1.0",
    "typescript": "~4.3.5",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@angular/animations": "^12.2.12",
    "@angular/cdk": "^12.2.12",
    "@angular/common": "^12.2.12",
    "@angular/compiler": "^12.2.12",
    "@angular/core": "^12.2.12",
    "@angular/forms": "^12.2.12",
    "@angular/material": "^12.2.12",
    "@angular/platform-browser": "^12.2.12",
    "@angular/platform-browser-dynamic": "^12.2.12",
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.78.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.78.0-alpha.0",
    "@ngxs/store": "^3.7.2",
    "app-root-path": "^2.2.1",
    "aws-cdk-lib": "^2.78.0",
    "aws-sdk": "^2.1017.0",
    "cfn-response": "^1.0.1",
    "constructs": "^10.1.64",
    "del": "^5.1.0",
    "leaflet": "^1.5.1",
    "lodash.isequal": "^4.5.0",
    "ngx-filesize": "^2.0.16",
    "rxjs": "^6.4.0",
    "source-map-support": "^0.5.9",
    "tslib": "^2.0.0",
    "uuid": "^3.4.0",
    "zone.js": "~0.11.4"
  }
}
