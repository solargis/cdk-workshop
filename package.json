{
  "name": "cdk-workshop",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "cd layers/sharp/nodejs && npm i && cd -",
    "dev": "concurrently -c gray,yellow,green npm:dev:dynamodb npm:api:watch npm:api:serve npm:web:serve --kill-others-on-fail",
    "dev:dynamodb": "docker run -p 8000:8000 -v $(pwd)/.local/dynamo:/data/ amazon/dynamodb-local -jar DynamoDBLocal.jar -sharedDb -dbPath /data",
    "build": "npm run api:build && npm run web:build",
    "api:build": "cdk synth",
    "web:build": "trash dist/web && ng build --aot --configuration production",
    "web:serve": "ng serve"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.12",
    "@angular/cli": "^12.2.12",
    "@angular/compiler-cli": "^12.2.12",
    "@angular/language-service": "^12.2.12",
    "@aws-cdk/aws-lambda-nodejs": "^1.161.0",
    "@types/app-root-path": "^1.2.4",
    "@types/aws-lambda": "^8.10.85",
    "@types/node": "^12.11.1",
    "@types/sharp": "^0.23.1",
    "@types/uuid": "^3.4.5",
    "aws-cdk": "^1.91.0",
    "concurrently": "^5.0.0",
    "parcel-plugin-externals": "^0.5.2",
    "serverless": "^2.64.1",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^8.2.0",
    "serverless-s3-local": "^0.6.20",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.1.0",
    "typescript": "~4.3.5"
  },
  "dependencies": {
    "@angular/animations": "^12.2.12",
    "@angular/cdk": "^12.2.12",
    "@angular/common": "^12.2.12",
    "@angular/compiler": "^12.2.12",
    "@angular/core": "^12.2.12",
    "@angular/forms": "^12.2.12",
    "@angular/material": "^12.2.12",
    "@angular/platform-browser": "^12.2.12",
    "@angular/platform-browser-dynamic": "^12.2.12",
    "@aws-cdk/aws-apigateway": "^1.91.0",
    "@aws-cdk/aws-cloudformation": "^1.91.0",
    "@aws-cdk/aws-cloudfront": "^1.91.0",
    "@aws-cdk/aws-dynamodb": "^1.91.0",
    "@aws-cdk/aws-lambda": "^1.91.0",
    "@aws-cdk/aws-s3": "^1.91.0",
    "@aws-cdk/aws-s3-deployment": "^1.91.0",
    "@aws-cdk/aws-s3-notifications": "^1.91.0",
    "@aws-cdk/core": "^1.91.0",
    "@ngxs/store": "^3.7.2",
    "app-root-path": "^2.2.1",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.1017.0",
    "cfn-response": "^1.0.1",
    "del": "^5.1.0",
    "leaflet": "^1.5.1",
    "lodash.isequal": "^4.5.0",
    "ngx-filesize": "^2.0.16",
    "rxjs": "^6.4.0",
    "sharp": "^0.29.2",
    "source-map-support": "^0.5.9",
    "tslib": "^2.0.0",
    "uuid": "^3.3.3",
    "zone.js": "~0.11.4"
  },
  "externals": [
    "aws-sdk",
    "sharp"
  ]
}
